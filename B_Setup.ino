void setup() 
{
//############################################################################################################################################################
// Glediator                                                                                                                     #
//############################################################################################################################################################
  Set_SDO_Output;
  Set_CLK_Output; 
  //Disable global interrupts
  cli();
  //UART Initialisation
  UCSR0A |= (1<<U2X0);                                
  UCSR0B |= (1<<RXEN0)  | (1<<TXEN0) | (1<<RXCIE0);   
  UCSR0C |= (1<<UCSZ01) | (1<<UCSZ00)             ; 
  UBRR0H = 0;
  UBRR0L = 1; //Baud Rate 1 MBit
  ptr=display_buffer;
  //Enable global interrupts
  sei();

//############################################################################################################################################################
// IR                                                                                                                   #
//############################################################################################################################################################
  irrecv.enableIRIn();

//############################################################################################################################################################
// FASTLED                                                                                                                   #
//############################################################################################################################################################
  FastLED.addLeds<WS2801, DATA_PIN, CLOCK_PIN, RGB>(leds, NUM_LEDS);
  FastLED.setBrightness(BRIGHTNESS);

//############################################################################################################################################################
// Funky                                                                                                                #
//############################################################################################################################################################
  //Funky
  FastLED.setDither(0);
  // just for debugging:
  // Serial.begin(38400);
  InitMSGEQ7();
  // Initialize our noise coordinates to some random values
  x = random16();
  y = random16();
  z = random16();
  x2 = random16();
  y2 = random16();
  z2 = random16();
}
